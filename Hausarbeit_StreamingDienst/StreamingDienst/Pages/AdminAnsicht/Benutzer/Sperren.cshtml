@page
@model StreamingDienst.Pages.AdminAnsicht.SperrenModel

@{
    ViewData["Title"] = "Sperren";
}

<h2>Möchten Sie den Benutzer wirklich sperren?</h2>
<hr />
<br />
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Vorname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Vorname)
        </dd>
        <dt class="col-sm-2">
            E-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.EMail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.IBAN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.IBAN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.BIC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.BIC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Bank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Bank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Geburtsdatum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Geburtsdatum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Benutzername)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Benutzername)
        </dd>
        <dt class="col-sm-2">
            Aktuelles Guthaben
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Guthaben)€
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <input type="hidden" asp-for="User.Name" />
            <input type="hidden" asp-for="User.Vorname" />
            <input type="hidden" asp-for="User.EMail" />
            <input type="hidden" asp-for="User.IBAN" />
            <input type="hidden" asp-for="User.BIC" />
            <input type="hidden" asp-for="User.Bank" />
            <input type="hidden" asp-for="User.Geburtsdatum" />
            <input type="hidden" asp-for="User.Benutzername" />
            <input type="hidden" asp-for="User.Gesperrt" value="true" />
            <input type="hidden" asp-for="User.Hash" />
            <input type="hidden" asp-for="User.Salt" />
            <input type="hidden" asp-for="User.Guthaben" />
            <div class="form-group">
                <input type="submit" value="Sperren" class="btn btn-danger" /> | <a asp-page="../BenutzerListe" asp-route-AdminID="@Model.Admin.ID">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
