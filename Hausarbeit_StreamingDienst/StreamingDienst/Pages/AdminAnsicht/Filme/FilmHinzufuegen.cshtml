@page
@model StreamingDienst.Pages.AdminAnsicht.Filme.FilmHinzufuegenModel

@{
    ViewData["Title"] = "FilmHinzufuegen";
}

<h1>Film hinzufügen</h1>
<hr />
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Länge</label>
                <input asp-for="Film.FilmLaenge" class="form-control" />
                <span asp-validation-for="Film.FilmLaenge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Kaufpreis" class="control-label"></label>
                <input type="text" name="KaufpreisText" class="form-control" />
                <span asp-validation-for="Film.Kaufpreis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Film.Leihpreis" class="control-label"></label>
                <input type="text" name="LeihpreisText" class="form-control" />
                <span asp-validation-for="Film.Leihpreis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Genre</label><br />
                <select asp-for="GenreWahl" asp-items="Model.Genres"></select>
            </div>
            <div class="form-group">
                <label asp-for="Film.VideoData" class="control-label"></label>
                <input type="file" asp-for="Upload" />
                <span asp-validation-for="Film.VideoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Hinzufügen" class="btn btn-primary" /> | <a asp-page="../FilmListe" asp-route-AdminID="@Model.Admin.ID">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
