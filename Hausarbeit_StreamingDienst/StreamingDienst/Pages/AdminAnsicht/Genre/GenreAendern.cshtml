@page
@model StreamingDienst.Pages.AdminAnsicht.Genre.GenreAendernModel

@{
    ViewData["Title"] = "GenreAendern";
}

<h1>Genre ändern</h1>
<hr />
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Genre.ID" />
            <div class="form-group">
                <label class="control-label">Genrebezeichnung</label>
                <input asp-for="Genre.GenreName" class="form-control" />
                <span asp-validation-for="Genre.GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Änderungen speichern" class="btn btn-primary" /> | <a asp-page="../GenreListe" asp-route-AdminID="@Model.Admin.ID">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}