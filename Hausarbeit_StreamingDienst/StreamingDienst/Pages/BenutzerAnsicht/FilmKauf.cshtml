@page
@model StreamingDienst.Pages.BenutzerAnsicht.FilmKaufModel

@{
    ViewData["Title"] = "FilmKauf";
}

<h1>Film kaufen</h1>
<hr />
@ViewData["error"]
<br />
<br />
<dl class="row">
    <dt class="col-sm-2">
        Titel
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Film.FilmTitel)
    </dd>
    <dt class="col-sm-2">
        Kaufpreis
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Film.Kaufpreis)€
    </dd>
    <dt class="col-sm-2">
        Aktuelles Guthaben
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.User.Guthaben)€
    </dd>
    <dt class="col-sm-2">
        Guthaben nach Kauf
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.NeuesGuthaben)€
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Film kaufen" class="btn btn-primary" /> | <a asp-page="./Index" asp-route-UserID="@Model.User.ID">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
