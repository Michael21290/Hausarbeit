@page
@model StreamingDienst.Pages.BenutzerAnsicht.PasswortAendernModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Passwort ändern</h1>

<hr />
@ViewData["error"]
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <input type="hidden" asp-for="User.Name" />
            <input type="hidden" asp-for="User.Vorname" />
            <input type="hidden" asp-for="User.EMail" />
            <input type="hidden" asp-for="User.IBAN" />
            <input type="hidden" asp-for="User.BIC" />
            <input type="hidden" asp-for="User.Bank" />
            <input type="hidden" asp-for="User.Geburtsdatum" />
            <input type="hidden" asp-for="User.Benutzername" />
            <input type="hidden" asp-for="User.Gesperrt" />
            <input type="hidden" asp-for="User.Salt" />
            <input type="hidden" asp-for="User.Guthaben" />
            <div class="form-group">
                <label class="control-label">Altes Passwort</label>
                <input type="password" asp-for="AltesPasswort" class="form-control" />
                <span asp-validation-for="User.Hash" class="text-danger"></span>
            </div>
            <hr />
            <br />
            <div class="form-group">
                <label class="control-label">Neues Passwort</label>
                <input type="password" asp-for="NeuesPasswort" class="form-control" />
                <span asp-validation-for="User.Hash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Passwort wiederholen</label>
                <input type="password" asp-for="PasswortWiederholen" class="form-control" />
                <span asp-validation-for="User.Hash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Neues Passwort Speichern" class="btn btn-primary" /> | <a asp-page="./Index" asp-route-UserID="@Model.User.ID">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
